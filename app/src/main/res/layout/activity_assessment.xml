<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/everyscreenbackground"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".Assessment1"
    >


    <RelativeLayout
        android:id="@+id/assessment_linear"
        android:layout_width="369dp"
        android:layout_height="419dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/rounded_border_edittext"
        android:paddingLeft="15dp"
        android:paddingTop="60dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="9dp">


        <TextView
            android:id="@+id/question1"
            android:layout_width="312dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/radiogroup_assessment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-52dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <RadioGroup
            android:id="@+id/radiogroup_assessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/radiogroup_assessment"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp" />

        </RadioGroup>

        <Button
            android:id="@+id/next_question"
            android:layout_width="334dp"
            android:layout_height="52dp"
            android:layout_below="@+id/radiogroup_assessment"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="71dp"
            android:background="@color/colorPrimary"
            android:text="@string/nextQue"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/white"
            android:textSize="23sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/timerText"
        android:layout_width="202dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="360dp"
        android:gravity="center"
        android:text="Time Left"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/assessment_linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/assessmenTitle"
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="ASSESSMENT"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/assessment_linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
